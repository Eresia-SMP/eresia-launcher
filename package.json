{
    "name": "eresia_smp_launcher",
    "description": "Launcher for the Eresia SMP",
    "private": true,
    "author": "Heavenstone",
    "repository": {
        "url": "https://github.com/Eresia-SMP/eresia-launcher"
    },
    "version": "0.1.0",
    "main": "dist/main/index.js",
    "license": "MIT",
    "scripts": {
        "build": "concurrently \"gulp\" \"vite build --base=./\"",
        "watch:renderer": "vite",
        "watch:main": "concurrently \"gulp watch\" \"nodemon --watch dist/main --exec \\\"electron .\\\"\"",
        "dev": "gulp && concurrently \"yarn watch:renderer\" \"yarn watch:main\"",
        "package": "electron-forge package",
        "make": "electron-forge make"
    },
    "config": {
        "forge": {
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "config": {
                        "repository": {
                            "owner": "Eresia-SMP",
                            "name": "eresia-launcher"
                        },
                        "draft": true
                    }
                }
            ],
            "packagerConfig": {
                "icon": "build_resources/icon.ico",
                "ignore": [
                    ".vscode",
                    ".prettierrc.yaml",
                    ".gitignore",
                    "gulpfile.js",
                    "postcss.config.js",
                    "tailwind.config.js",
                    "vite.config.js"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "title": "Eresia SMP Launcher"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "win32"
                    ]
                }
            ]
        }
    },
    "dependencies": {
        "electron-is-dev": "^2.0.0",
        "electron-squirrel-startup": "^1.0.0",
        "extract-zip": "^2.0.1",
        "lodash": "^4.17.21",
        "node-fetch": "^2.6.1",
        "sha1-file": "^2.0.0",
        "update-electron-app": "^2.0.1"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.57",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
        "@electron-forge/maker-zip": "^6.0.0-beta.57",
        "@electron-forge/publisher-github": "^6.0.0-beta.57",
        "@sveltejs/vite-plugin-svelte": "^1.0.0-next.10",
        "@types/extract-zip": "^2.0.1",
        "@types/lodash": "^4.14.170",
        "@types/node": "^15.12.4",
        "@types/node-fetch": "^2.5.10",
        "autoprefixer": "^10.2.6",
        "concurrently": "^6.2.0",
        "electron": "^13.1.4",
        "gulp": "^4.0.2",
        "gulp-typescript": "^6.0.0-alpha.1",
        "nodemon": "^2.0.7",
        "postcss": "^8.3.1",
        "prettier": "^2.3.1",
        "svelte": "^3.38.2",
        "svelte-preprocess": "^4.7.3",
        "tailwindcss": "^2.1.4",
        "typescript": "^4.3.2",
        "vite": "^2.3.7"
    }
}